<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Test for Chrome browser">
    <test name="testChrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="headless" value="true"/>
        <parameter name="remote" value="http://localhost:4444/wd/hub"/>
        <parameter name="browserVersion" value="null"/>
        <parameter name="timeout" value="8000"/>
        <parameter name="baseUrl" value="https://task-delivery-test.herokuapp.com/"/>
        <classes>
            <class name="uitest.mainPage.MainPageTest"/>
            <class name="uitest.contacts.AddContactsPageTest"/>
            <class name="uitest.organizations.AddOrganizationsPageTest"/>
        </classes>
    </test>
</suite>